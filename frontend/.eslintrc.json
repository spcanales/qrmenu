{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "@vue/standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "parser": "babel-eslint"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow" : "always"
        }],
        "no-trailing-spaces": "error",
        "new-parens": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0
            }
        ],
        "comma-dangle": "error",
        "semi": ["error", "always"],
        "semi-style": ["error", "last"],
        "no-extra-semi": ["error"],
        "no-var": "error"
    }
}